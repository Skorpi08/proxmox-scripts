version: '3.9'
services:
  emby:
    image: emby/embyserver:latest
    container_name: emby
    restart: always
    #network_mode: host   # einfacher für DLNA, Chromecast & automatische Discovery
    environment:
      - UID=1000
      - GID=1000
      - GIDLIST=44   # für Video-Gruppenrechte (z.B. /dev/dri)
    devices:
      - /dev/dri/renderD129  # Hardware-Transcoding (Intel iGPU / QuickSync)
    ports:
      - 8096:8096
      - 8920:8920
    volumes:
      - /etc/timezone:/etc/timezone:ro
      - /etc/localtime:/etc/localtime:ro
      - /config/emby:/config     # Konfigurationsdatenbank
      - /cache/emby:/cache       # Vorschaubilder, Transcoding Cache
      - /mnt/hdd/Bilder:/Bilder        # deine Medien (Filme, Serien, Musik)
      - /mnt/hdd/Musik:/Musik        # deine Medien (Filme, Serien, Musik)
      - /mnt/hdd/Videos:/Videos        # deine Medien (Filme, Serien, Musik)
